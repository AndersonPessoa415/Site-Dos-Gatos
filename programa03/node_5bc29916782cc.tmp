       .nav_tabs {
           width: 650px;
           height: 800px;
           margin: 100px 500px auto;
          position: relative;
          background-color:rgba(108, 134, 11, 0.5);
       }
       .nav_tabs ul{
           list-style: none;
       }
       .nav_tabs ul li{
            float: left;
            text-align: center;
       }
       .nav_tabs label{
           width: 190px;
           height: 80px;
           text-align: center;
           background-color: rgb(41, 38, 38);
           color: wheat;
           display: block;
           cursor: pointer;
           font-size: 18px;
       }
       .rb_tabs:checked ~ label{
           background-color: brown;
       }
       .rb_tabs{
           display: none;
       }

    </style> 
</head>
